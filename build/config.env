# Cloz Outfit Generator API - CI/CD Configuration
# Copy this file to .env and modify as needed

# AWS Configuration
AWS_REGION=eu-west-3
STACK_NAME=cloz-outfit-generator-build

# Lambda Function
LAMBDA_FUNCTION_NAME=ClozRandomLookGenerator

# S3 Buckets (will be created automatically)
SOURCE_CODE_BUCKET=cloz-outfit-generator-source
ARTIFACTS_BUCKET=cloz-outfit-generator-artifacts

# CodeBuild Configuration
CODEBUILD_PROJECT_NAME=cloz-outfit-generator-build
CODEBUILD_COMPUTE_TYPE=BUILD_GENERAL1_SMALL

# Build Configuration
NODE_VERSION=18
MAX_BUILD_TIME=30
BUILD_CACHE_ENABLED=true

# Security
ENCRYPTION_ALGORITHM=AES256
PUBLIC_ACCESS_BLOCKED=true
VERSIONING_ENABLED=true
